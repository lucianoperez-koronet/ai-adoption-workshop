{
  "name": "flower-catalog-search",
  "version": "0.0.1",
  "private": true,
  "workspaces": ["frontend", "bff"],
  "scripts": {
    "dev": "concurrently -n bff,frontend -c blue,green \"npm run dev:bff\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev -w frontend",
    "dev:bff": "npm run dev -w bff",
    "build": "npm run build -w bff && npm run build -w frontend",
    "build:bff": "npm run build -w bff",
    "build:frontend": "npm run build -w frontend"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
